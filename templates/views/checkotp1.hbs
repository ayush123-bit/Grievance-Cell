<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(to right, #ffe9d9, #636869b1);
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            overflow: hidden;
        }

        .otp-form {
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 0 40px rgba(0, 0, 0, 0.2);
            padding: 30px;
            width: 800px;
            text-align: center;
            display: flex;
            align-items: center;
            height: 500px;
            animation: tiltAnimation 1s ease-in-out, fadeIn 1s ease-in-out;
        }

        .form-container {
            flex-grow: 1;
        }

        label {
            display: block;
            margin-bottom: 15px;
            font-weight: bold;
            color: #333;
            font-size: 18px;
        }

        .otp-input-container {
            display: flex;
            justify-content: space-between;
            margin-bottom: 25px;
            transition: transform 0.5s ease-in-out;
        }

        .otp-input {
            width: calc(16.66% - 10px);
            padding: 15px;
            box-sizing: border-box;
            border: 2px solid #45a247;
            border-radius: 8px;
            font-size: 18px;
            text-align: center;
            background: #f7f7f7;
            transition: width 0.3s ease, border-color 0.3s ease;
        }

        .otp-input:hover, .otp-input:focus {
            width: calc(16.66% - 5px);
            border-color: #3b8046;
        }

        button {
            background-color: #45a247;
            color: #fff;
            padding: 15px 25px;
            border: none;
            border-radius: 8px;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #3b8046;
        }

        h2 {
            color: #333;
            margin-bottom: 30px;
            font-size: 24px;
            margin-top: 0;
        }

        .otp-image {
            width: 400px;
            margin-right: -15px;
            height: 550px;
        }

        @keyframes tiltAnimation {
            0% {
                transform: rotate(0deg);
            }
            50% {
                transform: rotate(3deg);
            }
            100% {
                transform: rotate(0deg);
            }
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
    </style>
</head>
<body>
    <div class="otp-form">
        <img src="css/otp.jpg" alt="Verification Image" class="otp-image" >
        <div class="form-container">
            <h2>Enter OTP</h2>
            <form id="otpForm" action="verifyotp1" method="post" autocomplete="off">
                <div class="form-group">
                    <label for="otp">Enter OTP:</label>
                    <div class="otp-input-container">
                        <input type="text" class="otp-input" id="digit1" name="digit1" maxlength="1" oninput="handleInput(this, event)" required>
                        <input type="text" class="otp-input" id="digit2" name="digit2" maxlength="1" oninput="handleInput(this, event)" required>
                        <input type="text" class="otp-input" id="digit3" name="digit3" maxlength="1" oninput="handleInput(this, event)" required>
                        <input type="text" class="otp-input" id="digit4" name="digit4" maxlength="1" oninput="handleInput(this, event)" required>
                       
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit">Verify OTP</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function handleInput(currentInput, event) {
            if (event.inputType === 'deleteContentBackward') {
                const prevInput = currentInput.previousElementSibling;
                if (prevInput) {
                    prevInput.focus();
                }
            } else {
                const nextInput = currentInput.nextElementSibling;
                if (nextInput && nextInput.tagName === 'INPUT') {
                    nextInput.focus();
                }
            }
        }
    </script>
</body>
</html>
